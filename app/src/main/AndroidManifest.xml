<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cap0323.medy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Medy">
        <activity
            android:name=".ui.detail.DetailActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".ui.medicine.MedicineActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.indication.IndicationActivity" />
        <activity
            android:name=".SplashScreenActivity"
            android:noHistory="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        </activity>
        <activity
            android:name=".ui.typeselection.TypeSelectionActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.typeselection.TypeSelectionActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.opening.MainActivity"
            android:noHistory="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".ui.typeIndication.TypeIndicationActivity">

        </activity>
    </application>

</manifest>